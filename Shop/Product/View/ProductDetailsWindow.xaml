<Window x:Class="Shop.Product.View.ProductDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop.Product.View"
        mc:Ignorable="d"
        Title="ProductDetailsWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <TextBlock x:Name="NameText" FontWeight="Bold" FontSize="16"/>
        <TextBlock x:Name="PriceText" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
